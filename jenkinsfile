pipeline {

  agent none

  environment {
    DOCKER_IMAGE = "hieubossgr/jenkins-docker-PHP"
  }

  stages {
    stage("Install nginx") {
      agent {
          docker {
            image 'nginx:1.17.8-alpine'
            args '-u 0:0 -v /tmp:/root/.cache'
          }
      }
    }

    stage("Install php") {
      agent {
	  docker {
	    image 'php:7.4.3-fpm-alpine3.11'
	    args '-u 0:0 -v /tmp:/root/.cache'
	  }
      }
    }
  }

  post {
    success {
      echo "SUCCESSFUL"
    }
    failure {
      echo "FAILED"
    }
  }
}
